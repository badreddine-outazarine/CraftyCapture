{
  "manifest_version": 3,
  "name": "FullPageCapture Pro",
  "version": "1.0",
  "description": "Capture full-page screenshots with all the bells and whistles",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "38": "images/38x38.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "ui.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["overlay.html"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "images/icon16.png",
    "19": "images/19x19.png",
    "38": "images/38x38.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}